{
  "info": {
    "name": "OrganLink Hospital Module - COMPLETE & WORKING",
    "description": "Complete Hospital Module with all features working - Authentication, Dashboard, Patients, AI Matching, OCR",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "1. Hospital Authentication Flow",
      "item": [
        {
          "name": "Get Cities by State",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/donors/hospital/cities-by-state?stateId={{stateId}}",
            "description": "Frontend dropdown: Country → State → City"
          }
        },
        {
          "name": "Get Hospitals by City",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/donors/hospital/hospitals-by-city?city={{city}}&stateId={{stateId}}",
            "description": "Frontend dropdown: City → Hospital"
          }
        },
        {
          "name": "Hospital Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\"hospitalId\": {{hospitalId}}, \"userId\": \"{{userId}}\", \"password\": \"{{password}}\"}"
            },
            "url": "{{baseUrl}}/donors/hospital/login",
            "description": "Hospital staff login with User ID + Password"
          }
        }
      ]
    },
    {
      "name": "2. Hospital Dashboard",
      "item": [
        {
          "name": "Dashboard Overview",
          "request": {
            "method": "GET",
            "header": [{"key": "X-Tenant-ID", "value": "{{tenantId}}"}],
            "url": "{{baseUrl}}/donors/hospital/dashboard",
            "description": "Complete hospital dashboard with statistics"
          }
        }
      ]
    },
    {
      "name": "3. Patient Management",
      "item": [
        {
          "name": "Get All Patients",
          "request": {
            "method": "GET",
            "header": [{"key": "X-Tenant-ID", "value": "{{tenantId}}"}],
            "url": "{{baseUrl}}/donors/hospital/patients?page=0&size=20",
            "description": "Get all patients for the hospital"
          }
        },
        {
          "name": "Create New Patient",
          "request": {
            "method": "POST",
            "header": [
              {"key": "X-Tenant-ID", "value": "{{tenantId}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"firstName\": \"John\", \"lastName\": \"Doe\", \"age\": 45, \"bloodType\": \"O+\", \"organNeeded\": \"Kidney\", \"urgencyLevel\": \"HIGH\"}"
            },
            "url": "{{baseUrl}}/donors/hospital/patients",
            "description": "Register new patient for organ transplant"
          }
        }
      ]
    },
    {
      "name": "4. Donor Management",
      "item": [
        {
          "name": "Get All Donors",
          "request": {
            "method": "GET",
            "header": [{"key": "X-Tenant-ID", "value": "{{tenantId}}"}],
            "url": "{{baseUrl}}/donors",
            "description": "Get all donors for the hospital"
          }
        },
        {
          "name": "Create New Donor",
          "request": {
            "method": "POST",
            "header": [
              {"key": "X-Tenant-ID", "value": "{{tenantId}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"firstName\": \"Jane\", \"lastName\": \"Smith\", \"age\": 30, \"bloodType\": \"O+\", \"organType\": \"Kidney\"}"
            },
            "url": "{{baseUrl}}/donors",
            "description": "Register new organ donor"
          }
        }
      ]
    },
    {
      "name": "5. AI Organ Matching",
      "item": [
        {
          "name": "Find Matches for Patient",
          "request": {
            "method": "POST",
            "header": [{"key": "X-Tenant-ID", "value": "{{tenantId}}"}],
            "url": "{{baseUrl}}/donors/hospital/ai-matching/{{patientId}}",
            "description": "AI-powered organ matching for specific patient"
          }
        }
      ]
    },
    {
      "name": "6. FAQ System",
      "item": [
        {
          "name": "Get Hospital FAQs",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/donors/hospital/faqs",
            "description": "Get frequently asked questions for hospital staff"
          }
        }
      ]
    },
    {
      "name": "7. OCR Signature Verification",
      "item": [
        {
          "name": "Complete OCR → IPFS → Blockchain Flow",
          "request": {
            "method": "POST",
            "header": [{"key": "X-Tenant-ID", "value": "{{tenantId}}"}],
            "body": {
              "mode": "formdata",
              "formdata": [
                {"key": "signatureFile", "type": "file", "description": "Upload signature image"},
                {"key": "signerName", "value": "John Doe", "type": "text"},
                {"key": "signerType", "value": "SELF", "type": "text"},
                {"key": "entityType", "value": "PATIENT", "type": "text"},
                {"key": "entityId", "value": "1", "type": "text"},
                {"key": "doctorId", "value": "DR001", "type": "text"}
              ]
            },
            "url": "{{baseUrl}}/signature/verify-and-store",
            "description": "Complete flow: OCR verification → IPFS storage → Blockchain recording"
          }
        }
      ]
    }
  ],
  "variable": [
    {"key": "baseUrl", "value": "http://localhost:8081/api/v1"},
    {"key": "stateId", "value": "25"},
    {"key": "city", "value": "Chennai"},
    {"key": "hospitalId", "value": "1"},
    {"key": "userId", "value": "test_hospital"},
    {"key": "password", "value": "test123"},
    {"key": "tenantId", "value": "hospital-1"},
    {"key": "patientId", "value": "1"}
  ]
}
