          "name": "Hospital Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"hospitalId\": {{hospitalId}},\n  \"userId\": \"{{hospitalUserId}}\",\n  \"password\": \"{{hospitalPassword}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/hospital/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["hospital", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.tenantId) {",
                  "        pm.environment.set('hospitalTenantId', response.data.tenantId);",
                  "        pm.environment.set('hospitalToken', response.data.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
